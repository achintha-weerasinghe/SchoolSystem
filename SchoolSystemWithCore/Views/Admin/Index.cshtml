@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Admin</h2>

<div class="row">
    <div class="col-lg-4 col-xs-4">
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>@ViewBag.UsersCount</h3>

                <p>User Registrations</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="@Url.Action("Register", "Account")" class="small-box-footer">Create New User <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-4 col-xs-4">
        <div class="small-box bg-red">
            <div class="inner">
                <h3>@ViewBag.RolesCount</h3>

                <p>Role Registration</p>
            </div>
            <div class="icon">
                <i class="ion ion-plus-circled"></i>
            </div>
            <a href="@Url.Action("CreateRole", "Admin")" class="small-box-footer">
                Add New Role <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>