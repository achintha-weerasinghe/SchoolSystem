@model SchoolSystemWithCore.Models.ViewModels.CreateClassViewModel

@{
    ViewData["Title"] = "Create New Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="register-box-body" style="width: 50%">
    @if (ViewBag.Message != null)
    {
        <div class="box box-success box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Message</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
        </div>
    }
    <h2 style="text-align: center">Create New Class</h2>
    <form asp-controller="Admin" asp-action="CreateClass" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group has-feedback">
            <input asp-for="ClassRoomName" class="form-control" placeholder="Class">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
            <span asp-validation-for="ClassRoomName" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Create New Class</button>
            </div>
        </div>
    </form>
</div>
